#!/bin/bash

while true
do
/usr/local/mysql/bin/mysql --user="cooperacy" \
--password="whateveritis" \
--database="coo" \
--execute='SELECT @couser:=COUNT(`active`) FROM `coo`.`user` WHERE `active` = '1'; \
SELECT @ideas:=COUNT(`stage`) FROM `coo`.`project` WHERE `stage` = '7'; \
update `coo`.`project` \
set collect = collect + 0.000000380517504 * @couser / @ideas \
where stage = 7'
sleep 1
done

while true
do
/usr/local/mysql/bin/mysql --user="cooperacy" \
--password="whateveritis" \
--database="coo" \
--execute='SELECT @allprojectD:=SUM(`D`) FROM `coo`.`project` WHERE `stage` = '7';
CREATE TABLE IF NOT EXISTS BIZARRE AS (SELECT id, `D`/@allprojectD+(RAND()-RAND()) AS BIZARDRY FROM `coo`.`project` WHERE `stage` = '7');
SELECT * FROM BIZARRE;
SELECT @bizard:=id FROM BIZARRE WHERE BIZARDRY = (SELECT MAX(DISTINCT BIZARDRY) FROM BIZARRE);
UPDATE coo.project SET stage = 3 WHERE ID = @bizard;
DROP TABLE BIZARRE;'
sleep 91d
done


